#include <iostream>
#include <locale>
#include <cstdlib>
using namespace std;

int main()
{
    setlocale(LC_ALL, "RUSSIAN");
    std::cout << 
        "Я буду метаться по табору улицы темной  \n"
        "За веткой черемухи в черной рессорной карете, \n"
        "За капором снега, за вечным, за мельничным шумом... \n "

        "Я только запомнил каштановых прядей осечки, \n"
        "Придымленных горечью, нет - с муравьиной кислинкой, \n"
        "От них на губах остается янтарная сухость. \n"
    << endl;
    cin.get();
    system("pause>0");
    return 0;
}
